							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code is 200\", function () {\r",
									"    pm.response.to.have.status(200);\r",
									"});\r",
									"\r",
									"const responseData = pm.response.json();\r",
									"\r",
									"const statusText = responseData.status;\r",
									"\r",
									"const dashIndex = statusText.indexOf('-');\r",
									"\r",
									"if (dashIndex !== -1) {\r",
									"    const extractedString = statusText.substring(dashIndex + 1).trim();\r",
									"    \r",
									"    pm.collectionVariables.set(\"itemID\", extractedString);\r",
									"    \r",
									"    console.log(\"Извлеченная строка:\", extractedString);\r",
									"    console.log(\"Сохранено в переменную: saved_ad_id\");\r",
									"} else {\r",
									"    console.log(\"Дефис не найден в строке\");\r",
									"}"
